@model IEnumerable<HospitalManagement.Models.HospitalModel.DossiersMedicaux>

@{
    ViewData["Title"] = "SearchByPatient";
}

<h1>SearchByPatient</h1>
<form asp-action="SearchByPatient" method="get">
    <div class="form-group">
        <label for="nom">Nom :</label>
        <input type="text" name="nom" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="prenom">Prénom :</label>
        <input type="text" name="prenom" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Rechercher</button>
</form>
<p>
   
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Diagnostic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medecin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RendezVous)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Diagnostic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Nom)
                    @Html.DisplayFor(modelItem => item.Patient.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medecin.Nom)
                    @Html.DisplayFor(modelItem => item.Medecin.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RendezVous.Id)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
